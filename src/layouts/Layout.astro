---
import Footer from '../components/Footer.astro';
import HeaderImage from '../components/HeaderImageTitle.astro';
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<!--  <meta name="generator" content={Astro.generator} /> -->
		<title>Mug of Coffee Software</title>
	</head>
	<body class="bg-orange-50 min-h-screen flex flex-col">
		<div class="relative">
			<div class="absolute z-10 w-full flex justify-center">
				<Navbar />
			</div>
			<div class="relative inset-0 z-0">
				<HeaderImage>
					<h1 class="text-white font-sans text-6xl font-bold text-center">{title}</h1>
				</HeaderImage>
			</div>
		</div>
		<main class="lg:mr-8 lg:ml-8 z-30 pt-16 pb-16 grow">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
